<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="20dp"
    app:cardCornerRadius="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp">
    <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_cars_list"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@color/black"
            android:elevation="2dp"/>

        <TextView
            android:id="@+id/name_cars_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_cars_list"
            android:text="Mazda 6 Sedan"
            style="@style/itemName"/>

        <TextView
            android:id="@+id/type_cars_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_cars_list"
            android:layout_toEndOf="@id/img_cars_list"
            style="@style/itemType"
            android:text="Sedan"/>

        <TextView
            android:id="@+id/price_cars_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/type_cars_list"
            android:layout_toEndOf="@+id/img_cars_list"
            style="@style/itemType"
            android:text="Rp. 729.000.000" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
